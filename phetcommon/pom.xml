<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.aimxcel.abclearn.common.abclearncommon</groupId>
	<artifactId>phetcommon</artifactId>
	<packaging>jar</packaging>
	<version>0.0.1-SNAPSHOT</version>

	<dependencies>
		<dependency>
			<artifactId>functionaljava</artifactId>
			<groupId>functionaljava</groupId>
			<version>3.1</version>
		</dependency>
		<dependency>
			<artifactId>jnlp</artifactId>
			<groupId>jnlp</groupId>
			<version>0.1</version>
		</dependency>
		<dependency>
			<artifactId>junit</artifactId>
			<groupId>junit</groupId>
			<version>0.1</version>
		</dependency>
		<dependency>
			<artifactId>lombok</artifactId>
			<groupId>lombok</groupId>
			<version>0.11.8</version>
		</dependency>
		<dependency>
			<artifactId>mongo</artifactId>
			<groupId>mongo</groupId>
			<version>2.7.2</version>
		</dependency>
	</dependencies>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources/phetcommon</directory>
				<includes>
					<include>*.gif</include>
					<include>*.properties</include>
					<include>*.htm</include>
				</includes>
				<targetPath>phetcommon</targetPath>
			</resource>
			<resource>
				<directory>src/main/resources/phetcommon/images/buttons</directory>
				<includes>
					<include>*.png</include>
				</includes>
				<targetPath>phetcommon/images/buttons</targetPath>
			</resource>
			<resource>
				<directory>src/main/resources/phetcommon/images/clock</directory>
				<includes>
					<include>*.gif</include>
				</includes>
				<targetPath>phetcommon/images/clock</targetPath>
			</resource>
			<resource>
				<directory>src/main/resources/phetcommon/images/logos</directory>
				<includes>
					<include>*.jpg</include>
				</includes>
				<targetPath>phetcommon/images/logos</targetPath>
			</resource>
			<resource>
				<directory>src/main/resources/phetcommon/images/status/network</directory>
				<includes>
					<include>*.png</include>
				</includes>
				<targetPath>phetcommon/images/status/network</targetPath>
			</resource>
			<resource>
				<directory>src/main/resources/phetcommon/localization</directory>
				<includes>
					<include>*.properties</include>
				</includes>
				<targetPath>phetcommon/localization</targetPath>
			</resource>
		</resources>
	</build>
</project>