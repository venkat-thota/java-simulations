<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.aimxcel.abclearn.eatingandexercise</groupId>
  <artifactId>eating-and-exercise</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <url>http://maven.apache.org</url>
  <build>
    <resources>
      <resource>
        <targetPath>eating-and-exercise</targetPath>
        <directory>src/main/resources/eating-and-exercise</directory>
        <includes>
          <include>*.properties</include>
        </includes>
      </resource>
      <resource>
        <targetPath>eating-and-exercise/audio</targetPath>
        <directory>src/main/resources/eating-and-exercise/audio</directory>
        <includes>
          <include>*.wav</include>
        </includes>
      </resource>
      <resource>
        <targetPath>eating-and-exercise/images</targetPath>
        <directory>src/main/resources/eating-and-exercise/images</directory>
        <includes>
          <include>*.jpg</include>
          <include>*.png</include>
          <include>*.gif</include>
        </includes>
      </resource>
      <resource>
        <targetPath>eating-and-exercise/localization</targetPath>
        <directory>src/main/resources/eating-and-exercise/localization</directory>
        <includes>
          <include>*.properties</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
          <showDeprecation>true</showDeprecation>
          <showWarnings>true</showWarnings>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <archive>
            <manifest>
              <mainClass>com.aimxcel.abclearn.eatingandexercise.EatingAndExerciseApplication</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.17</version>
        <configuration>
          <skipTests>true</skipTests>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
              <transformers>
                <transformer>
                  <manifestEntries>
                    <Main-Class>com.aimxcel.abclearn.eatingandexercise.EatingAndExerciseApplication</Main-Class>
                  </manifestEntries>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>

